include ../../_assets/bemto/bemto
- set_bemto_settings({ modifier: "--" })
include components/menu.pug
include components/icon.pug
include components/breadcrumb.pug
include components/pugination.pug
include components/soc.pug
include components/pic.pug
include components/img.pug
include components/btn.pug

include components/ddgroup.pug

mixin arrow()
	//- .swiper-button-hand.swiper-button-hand-prev.swiper-button-prev
	//- 	+icon('chevron-left')
	.swiper-button-hand.swiper-button-hand-next.swiper-button-next
		+icon('chevron-right')
//- /arrow for swiper-slider


mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="999"  inputmode='numeric')
		+e.btn--plus(type="button")

mixin addblocksm()
	+b.addBlock--sm
		+e.btn--minus(type="button")
		input(type="text" value="99"  inputmode='numeric')
		+e.btn--plus(type="button")

mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск..." inputmode='search')
			button 
				+icon("search")

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t

mixin parts(elem)
	script.
		addBlock(`#{elem}`)
	div(id=`${elem}Wrap`)


mixin iconsWrap
	+b.icons-wrap
		a(href='#'): +icon('vk')
		a(href='#'): +icon('insta')
		a(href='#'): +icon('tg')
		a(href='#'): +icon('whatsapp')


mixin range(c1, c2, fromTxt='От', toTxt='До',)
	+b.range-wrap.price_slider_amount&attributes(attributes)
		input.range-slider.slider-js(type='text'  data-min=c1  data-max=c2)

mixin product-item(i, t,pr, badge)
	+b.ARTICLE.product-item
		+e.img-wrap(href="#")
			+icon('heart')
			.img-wrap-center 
				+img(`img/catalog-${i}.png`)
			if badge
				+e.badge= badge
		+e.caption
			+e.title!= t
			if !badge
				+e.wrapper
					+e.price.fw-700!= pr
					+e.btn.btn.btn-primary(href='#') в корзину
			if badge
				+e.btn.btn.btn-secondary(href='#') узнать о поступлении

mixin product-item-fav(i, t,pr, badge)
	+b.ARTICLE.product-item
		+e.img-wrap(href="#")
			svg(class="icon icon-heart active")
				use(xlink:href="img/svg/sprite.svg#heart")
			.img-wrap-center 
				+img(`img/catalog-${i}.png`)
			if badge
				+e.badge= badge
		+e.caption
			+e.title!= t
			if !badge
				+e.wrapper
					+e.price.fw-700!= pr
					+e.btn.btn.btn-primary(href='#') в корзину
			if badge
				+e.btn.btn.btn-secondary(href='#') узнать о поступлении
	// /.product-item


mixin cartProduct
	+b.cart-product
		a(href='#').img-wrap: +img('img/cart-1.png').img
		+e.descr
			+e.title-wrap
				+e.title.title Кольцо-кликер с двойным рядом кристаллов
				+e.article.d-none.d-lg-block HMClicCryх2Hel
			+e.descr-wrap
				.text-secondary цвет: серый
				.text-secondary бренд: Anatometal
				.text-secondary резьба : безрезьбовое
				.text-secondary материал: Titanium ASTM F-136
			+e.price.d-none.d-lg-block 2 990 ₽
			+e.item-wrap.d-lg-none
				+e.item
					+e.item-title.text-secondary Размер:
					+e.item-text 3.5ММ
				+e.item
					+e.item-title.text-secondary Количество:
					+e.item-t: +input("10",'select','')
			.d-none.d-lg-block.add: +addblock()
			+e.price.price-xxl 13 990 ₽
		+e.icon-wrap.d-lg-none(href='#'): +icon('close')

mixin cartProductModal
	+b.cart-product--modal.d-block
		+e.descr
			a(href='#').img-wrap: +img('img/cart-1.png').img
			+e.title-wrap
				+e.title.title Кольцо-кликер с двойным рядом кристаллов
				+e.article HMClicCryх2Hel
			+e.descr-wrap
				.text-secondary цвет: серый
				.text-secondary бренд: Anatometal
				.text-secondary резьба : безрезьбовое
				.text-secondary материал: Titanium ASTM F-136
			.add: +addblocksm()
			+e.price 13 990 ₽
			+e.icon-wrap(href='#'): +icon('close')