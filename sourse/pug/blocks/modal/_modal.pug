
mixin modal() 
	//  start modals
	div(id="modal-call"  style="display: none" )
		+b.modal-win
			+form-wrap
				.text-center
					+e.title.form-data.h3.ttu Обратный звонок
					p.after-headline Заполните заявку и&nbsp;мы&nbsp;с&nbsp;Вами свяжемся в&nbsp;течение 15&nbsp;минут

				+input("Ваше Имя")(required)
				+input("Ваше телефон",'tel')(required)
				+input("Ваше телефон",'tel')(required)
				+e.BUTTON.btn.btn(type="submit"  ) submit
				+policy()
				+policy()
	div(id="modal-cart" style="display: none"  class='modal_right')
		+b.modal-win--lg
			+e.inner-wrap
				+e.title.h3 Корзина товаров
				+e.header.sBasket__header.d-block 4 товара
				+e.items
					.custom-scroll()
						+cartProductModal()
						+cartProductModal()
						+cartProductModal()
						+cartProductModal()
						+cartProductModal()
						+cartProductModal()
						+cartProductModal()
						+cartProductModal()
						+cartProductModal()
						+cartProductModal()
						+cartProductModal()
						+cartProductModal()
			+e.sum.sBasket__sum
				+e.sum-wrap.sBasket__sum-wrap
					+e.item.sBasket__item
						.small.sBasket__title Стоимость
						+e.price.sBasket__price.fw-500 0 ₽
					+e.item.sBasket__item
						.small.sBasket__title Доставка
						+e.price.sBasket__price.fw-500 0 ₽
					+e.item.sBasket__item.summary
						.sBasket__title.item-sum.fw-500 Итого:
						+e.price.sBasket__price.fw-500 13 990 ₽
				+e.btn-wrap: +e.BUTTON.btn.btn.btn-primary(type="submit"  ) Оформить заказ
	div(id="modal-master"  style="display: none" )
		+b.modal-win--master
			+e.row.row
				+e.col.col-5
					+e.item-left
						+b.master-item--modal
							+e.img-wrap.text-center
								+img(src=`img/svg/sMasters-bg.svg`, alt="").img
								+img(src=`img/sMasters-5.png`, alt="").master
						+e.exp Опыт: 1 год
						+e.btn.btn.btn-primary(href='#') Записаться
				+e.col.col-7.col-custom
						//- .custom-scroll(): .wrap
						+e.title-md.title Вишня
						+e.master Старший мастер
						+e.item-slide
							+e.title-sm.title Фото работ
							+b.master-slider--js
								.d-none.d-lg-block: +arrow2
								.swiper-wrapper
									+e.slide.swiper-slide
										+e.img-wrap: +img('img/sGallery-1.png')
									+e.slide.swiper-slide
										+e.img-wrap: +img('img/sGallery-2.png')
									+e.slide.swiper-slide
										+e.img-wrap: +img('img/sGallery-3.png')
									+e.slide.swiper-slide
										+e.img-wrap: +img('img/sGallery-2.png')
									+e.slide.swiper-slide
										+e.img-wrap: +img('img/sGallery-3.png')
						+e.item-slide
							+e.title-sm.title Сертификаты мастера
							+b.master-certif-slider--js
								.swiper-wrapper
									+e.slide.swiper-slide
										+e.img-wrap: +img('img/sCertificates-1.png')
									+e.slide.swiper-slide
										+e.img-wrap: +img('img/sCertificates-2.png')
									+e.slide.swiper-slide
										+e.img-wrap: +img('img/sCertificates-3.png')
									+e.slide.swiper-slide
										+e.img-wrap: +img('img/sCertificates-2.png')
									+e.slide.swiper-slide
										+e.img-wrap: +img('img/sCertificates-3.png')
