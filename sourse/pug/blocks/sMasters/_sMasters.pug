mixin sMasters(data)
	// start sMasters
	+b.SECTION.sMasters.section#sMasters&attributes(attributes)
		.container
			+b.section-title.text-center.pricing
				h2 Наши мастера
			+e.categories.sBlog-slider--js
				.swiper-wrapper.fw-700
					.swiper-slide: a.category.active(href='#') Сооснователь
					.swiper-slide: a.category(href='#') Старший мастер
					.swiper-slide: a.category(href='#') Мастер
					.swiper-slide: a.category(href='#') Администратор
