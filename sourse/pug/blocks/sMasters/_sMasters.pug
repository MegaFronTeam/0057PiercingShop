					+masterItem( '1','Аня Бамбуча', 'Сооснователь, Старший мастер')
				+e.col(class= wrapClass)
					+masterItem( '3','Марго', 'Старший мастер')
				+e.col(class= wrapClass)
					+masterItem( '2','Ирина', 'Администратор')
				+e.col(class= wrapClass)
					+masterItem( '4','Михаил Бут', 'Сооснователь, Старший мастер')
				+e.col(class= wrapClass)
					+masterItem( '3','Марго', 'Старший мастер')
				+e.col(class= wrapClass)
					+masterItem( '2','Ирина', 'Администратор')
				+e.col(class= wrapClass)
					+masterItem( '1','Аня Бамбуча', 'Сооснователь, Старший мастер')
				+e.col(class= wrapClass)
					+masterItem( '4','Михаил Бут', 'Сооснователь, Старший мастер')
				+e.col(class= wrapClass)
					+masterItem( '2','Ирина', 'Администратор')
				+e.col(class= wrapClass)
					+masterItem( '1','Аня Бамбуча', 'Сооснователь, Старший мастер')
				+e.col(class= wrapClass)
					+masterItem( '3','Марго', 'Старший мастер')
				+e.col(class= wrapClass)
					+masterItem( '2','Ирина', 'Администратор')
				+e.col(class= wrapClass)
					+masterItem( '4','Михаил Бут', 'Сооснователь, Старший мастер')
				+e.col(class= wrapClass)
					+masterItem( '3','Марго', 'Старший мастер')
	// end sMasters

mixin masterItem(i, title, text)
	+b.master-item
		+e.content
			.title=title
			.text.text-secondary=text
			+e.img-wrap.text-center
				+img(src=`img/svg/sMasters-bg.svg`, alt="").img
				+img(src=`img/sMasters-${i}.png`, alt="").master
		+e.btn-wrap.text-center: +e.btn.btn.btn-primary(href="#") Подробнее